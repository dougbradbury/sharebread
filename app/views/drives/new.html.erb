<h1>New drive</h1>

<% form_for(@drive) do |f| %>
  <%= f.error_messages %>
	<p>Name This Drive:  <%= f.text_field :name %></p>
	<p>Sign up by:  <%= f.date_select :sign_up_by %></p>
	<p>Collect by:  <%= f.date_select :collect_by %></p>
	<p>Drive Info (about this drive): </br><%= f.text_area :info %></p>
	<p>Collection Instructions:  </br><%= f.text_area :collection_instructions %></p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>